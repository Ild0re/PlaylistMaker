<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MessageTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
    <style name="ButtonMenuStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="cornerRadius">@dimen/screen_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="ButtonSettingStyle">
        <item name="android:layout_width">@dimen/button_size</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:tint">?attr/colorSecondaryVariant</item>
        <item name="android:gravity">end</item>
    </style>
    <style name="SongTitleStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
    <style name="SongStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
    </style>
    <style name="TrackButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/button_size</item>
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
        <item name="android:padding">6dp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>
    <style name="PlaceholderText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">19dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">19sp</item>
    </style>
    <style name="TrackFieldsNames">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_12</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/search_text</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="TrackFields">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_12</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>