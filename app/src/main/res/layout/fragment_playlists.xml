<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary"
    android:orientation="vertical"
    tools:context=".ui.library.activity.playlists.PlaylistsFragment">

    <Button
        android:id="@+id/buttonNewPlaylist"
        style="@style/TrackButtonStyle"
        android:text="@string/newPlaylist"
        android:layout_marginTop="@dimen/button_size"
        android:layout_gravity="center"
        android:padding="10dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/placeholderImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="46dp"
        android:src="@drawable/light_mode_1"
        android:visibility="visible" />

    <TextView
        android:id="@+id/placeholderText"
        style="@style/PlaceholderText"
        android:text="@string/playlistToast"
        android:layout_marginBottom="408dp"
        android:layout_marginStart="@dimen/button_size"
        android:layout_marginEnd="@dimen/button_size"
        android:layout_gravity="center"
        android:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</LinearLayout>