<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96" />

    <ImageButton
        android:id="@+id/buttonBackToMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/colorSecondary"
        android:src="@drawable/arrowback"
        android:layout_marginTop="@dimen/icon_padding"
        android:layout_marginStart="@dimen/icon_padding"
        app:tint="?attr/colorOnSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="82dp"
        android:layout_marginStart="@dimen/icon_padding"
        android:layout_marginEnd="@dimen/icon_padding"
        android:src="@drawable/test_image"
        app:layout_constraintBottom_toTopOf="@id/song_name"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"/>

    <TextView
        android:id="@+id/song_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/button_size"
        android:layout_marginStart="@dimen/icon_padding"
        android:layout_marginEnd="@dimen/icon_padding"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="@dimen/primary_text_size"
        android:textColor="?attr/colorOnSecondary"
        android:textFontWeight="400"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/cover"
        app:layout_constraintBottom_toTopOf="@id/singer_name"
        tools:text="Track Name"/>

    <TextView
        android:id="@+id/singer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/icon_padding"
        android:layout_marginTop="@dimen/margin_12"
        android:layout_marginEnd="@dimen/icon_padding"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSecondary"
        android:textFontWeight="400"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/song_name"
        app:layout_constraintBottom_toTopOf="@id/playButton"
        tools:text="Singer"/>

    <ImageButton
        android:id="@+id/seenButton"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginStart="@dimen/icon_padding"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintTop_toTopOf="@id/playButton"
        app:layout_constraintBottom_toBottomOf="@id/playButton"
        android:src="@drawable/add"
        android:background="@drawable/round_button"
        app:layout_constraintTop_toBottomOf="@id/singer_name"/>

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginTop="36dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/seenButton"
        app:layout_constraintEnd_toStartOf="@id/favoriteButton"
        android:src="@drawable/play_day"
        android:background="@drawable/white_round_button"
        app:layout_constraintTop_toBottomOf="@id/singer_name"/>

    <ImageButton
        android:id="@+id/favoriteButton"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginEnd="@dimen/icon_padding"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintTop_toTopOf="@id/playButton"
        app:layout_constraintBottom_toBottomOf="@id/playButton"
        android:src="@drawable/like"
        android:background="@drawable/round_button"
        app:layout_constraintTop_toBottomOf="@id/singer_name"/>

    <TextView
        android:id="@+id/songTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_12"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSecondary"
        android:textFontWeight="400"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/playButton"
        tools:text="00:00" />

    <TextView
        android:id="@+id/trackTime"
        style="@style/TrackFieldsNames"
        android:layout_marginTop="38dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/songTime"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/songTime"/>

    <TextView
        android:id="@+id/time"
        style="@style/TrackFields"
        android:layout_marginTop="38dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/songTime"
        app:layout_constraintStart_toEndOf="@id/textsBarrier"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constrainedWidth="true"
        tools:text="00:00"/>

    <TextView
        android:id="@+id/albumName"
        style="@style/TrackFieldsNames"
        android:layout_marginTop="@dimen/icon_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/albumName"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/trackTime" />

    <TextView
        android:id="@+id/album"
        style="@style/TrackFields"
        android:layout_marginTop="@dimen/icon_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/time"
        app:layout_constraintStart_toEndOf="@id/textsBarrier"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constrainedWidth="true"
        tools:text="Album"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/albumGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="albumName,album" />

    <TextView
        android:id="@+id/songYear"
        style="@style/TrackFieldsNames"
        android:layout_marginTop="@dimen/icon_padding"
        app:layout_goneMarginTop="@dimen/screen_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/songYear"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/albumName" />

    <TextView
        android:id="@+id/year"
        style="@style/TrackFields"
        android:layout_marginTop="@dimen/icon_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/album"
        app:layout_constraintStart_toEndOf="@id/textsBarrier"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constrainedWidth="true"
        tools:text="2000"/>

    <TextView
        android:id="@+id/songGenre"
        style="@style/TrackFieldsNames"
        android:layout_marginTop="@dimen/icon_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/songGenre"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/songYear" />

    <TextView
        android:id="@+id/genre"
        style="@style/TrackFields"
        android:layout_marginTop="@dimen/icon_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/year"
        app:layout_constraintStart_toEndOf="@id/textsBarrier"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constrainedWidth="true"
        tools:text="Rock"/>

    <TextView
        android:id="@+id/songCountry"
        style="@style/TrackFieldsNames"
        android:layout_marginTop="@dimen/icon_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="@string/songCountry"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/songGenre"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/country"
        style="@style/TrackFields"
        android:layout_marginTop="@dimen/icon_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/genre"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/textsBarrier"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constrainedWidth="true"
        tools:text="USA"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/textsBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="playButton"
        app:barrierDirection="start" />

</androidx.constraintlayout.widget.ConstraintLayout>